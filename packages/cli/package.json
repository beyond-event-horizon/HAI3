{
  "name": "@hai3/cli",
  "version": "0.1.0",
  "description": "HAI3 CLI - Project scaffolding and screenset management tools",
  "bin": {
    "hai3": "./dist/index.cjs"
  },
  "main": "./dist/api.cjs",
  "types": "./dist/api.d.cts",
  "exports": {
    ".": {
      "types": "./dist/api.d.cts",
      "require": "./dist/api.cjs"
    }
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "scripts": {
    "copy-templates": "npx tsx scripts/copy-templates.ts",
    "build": "npm run copy-templates && tsup",
    "dev": "tsup --watch"
  },
  "keywords": [
    "hai3",
    "cli",
    "scaffolding",
    "screenset",
    "saas"
  ],
  "author": "HAI3 Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/beyond-event-horizon/HAI3.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.23"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^24.9.1",
    "tsup": "^8.5.0",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
