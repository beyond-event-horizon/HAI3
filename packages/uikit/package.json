{
  "name": "@hai3/uikit",
  "version": "0.1.0-alpha.0",
  "description": "HAI3 UI Kit - Reusable React components built on shadcn/ui",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "src/styles/**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./src/styles/globals.css"
  },
  "files": [
    "dist",
    "src/styles",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
  },
  "keywords": [
    "hai3",
    "react",
    "components",
    "ui-kit",
    "shadcn",
    "tailwind"
  ],
  "author": "HAI3org",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/HAI3org/HAI3.git",
    "directory": "packages/uikit"
  },
  "bugs": {
    "url": "https://github.com/HAI3org/HAI3/issues"
  },
  "homepage": "https://github.com/HAI3org/HAI3#readme",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@hai3/uikit-contracts": "*",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.344.0",
    "tailwind-merge": "^2.6.0"
  },
  "peerDependencies": {
    "@hai3/uikit-contracts": "*",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.4.2"
  }
}
