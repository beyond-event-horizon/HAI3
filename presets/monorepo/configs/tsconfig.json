{
  "extends": "../../standalone/configs/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@/screensets/*": ["./src/screensets/*"],
      "@/themes/*": ["./src/themes/*"],
      "@/components/*": ["./src/components/*"],
      "@hai3/uicore": ["./packages/uicore/src/index.ts"],
      "@hai3/uicore/*": ["./packages/uicore/src/*"],
      "@hai3/uikit": ["./packages/uikit/src/index.ts"],
      "@hai3/uikit/*": ["./packages/uikit/src/*"],
      "@hai3/uikit-contracts": ["./packages/uikit-contracts/src/index.ts"],
      "@hai3/uikit-contracts/*": ["./packages/uikit-contracts/src/*"],
      "@hai3/devtools": ["./packages/devtools/src/index.ts"],
      "@hai3/devtools/*": ["./packages/devtools/src/*"],
      "@hai3/cli": ["./packages/cli/src/index.ts"],
      "@hai3/cli/*": ["./packages/cli/src/*"]
    }
  },
  "include": ["src", "packages/*/src"],
  "exclude": ["packages/*/dist"]
}
